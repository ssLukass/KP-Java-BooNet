<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Админское меню"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="24dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp">

        <Button
            android:id="@+id/btn_add_book"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Добавить книгу"
            android:padding="12dp"
            android:backgroundTint="@color/primary_KP"
            android:textColor="@color/white"
            android:textSize="18sp"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp">

        <Button
            android:id="@+id/btn_view_catalog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Просмотреть каталог"
            android:padding="12dp"
            android:backgroundTint="@color/primary_KP"
            android:textColor="@color/white"
            android:textSize="18sp"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp">

        <Button
            android:id="@+id/btn_view_users"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Список пользователей"
            android:padding="12dp"
            android:backgroundTint="@color/primary_KP"
            android:textColor="@color/white"
            android:textSize="18sp"/>
    </androidx.cardview.widget.CardView>

</LinearLayout>
